set nocompatible
filetype on
filetype plugin on
filetype indent on
set number
set incsearch
set ignorecase
set smartcase
set showcmd
set showmode
set showmatch
set hlsearch
set tabstop=4
set shiftwidth=4
syntax on
vnoremap <C-i> :norm i
vnoremap <C-n> :norm x
nmap <C-n> :nohl <CR>

nmap dil ^d$
nmap yil ^y$
nmap diw wbdw
nmap yiw wbyw
